<div class="form-container">
    <h4 class="mb-4">Add employee</h4>
    
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <ul class="mb-0">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }
    
    <form action="AddEmployee" method="post">
        <div class="mb-3">
            <input type="text" name="Name" class="form-control @(ViewData.ModelState["Name"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Name" required>
            @if (ViewData.ModelState["Name"]?.Errors.Count > 0)
            {
                <div class="invalid-feedback">
                    @ViewData.ModelState["Name"].Errors.First().ErrorMessage
                </div>
            }
        </div>
        <div class="mb-3">
            <input type="text" name="UserName" class="form-control @(ViewData.ModelState["UserName"]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="UserName" required>
            @if (ViewData.ModelState["UserName"]?.Errors.Count > 0)
            {
                <div class="invalid-feedback">
                    @ViewData.ModelState["UserName"].Errors.First().ErrorMessage
                </div>
            }
        </div>
        
        <div class="mb-3">
            <input type="email" name="Email" class="form-control"  placeholder="email" required>
        </div>
        <div class="mb-3">
            <input type="number" class="form-control" name="PhoneNamber"  placeholder="phone number" required>
        </div>
        <div class="mb-3">
            <input type="password" name="Password" class="form-control"  placeholder="password" required>
        </div>
        <div class="mb-3">
            <input type="text" name="JobTitle" class="form-control"  placeholder="JobTitle" required>
        </div>
        <div class="mb-3">
            <select name="Role" class="form-control">
                <option value="Technician">Technician</option>
                <option value="User">User</option>
                <option value="Finance">Finance</option>
                <option value="Asset Manager">Asset Manager</option>
            </select>
        </div>
        <input type="hidden" name="ProfileImage" value="/Image/default-avatar.png">
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Add</button>
        </div>
    </form>
</div>
    </div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
