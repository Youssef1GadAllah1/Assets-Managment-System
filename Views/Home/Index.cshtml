
<div class="row mb-4">
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <div class="text-muted">Total User</div>
                    <div class="fs-3 fw-bold">@ViewBag.TotalUsers</div>
                            </div>
                            <div class="stat-icon icon-purple">
                                <i class="fas fa-users"></i>
                            </div>
                        </div>
                        <a href="/Home/Employee" class="show-more text-decoration-none">
                            Show more <i class="fas fa-chevron-right ms-1 small"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <div class="text-muted">Total assets</div>
                    <div class="fs-3 fw-bold">@ViewBag.TotalAssets</div>
                            </div>
                            <div class="stat-icon icon-yellow">
                                <i class="fas fa-cube"></i>
                            </div>
                        </div>
                        <a href="/Asset/Index" class="show-more text-decoration-none">
                            Show more <i class="fas fa-chevron-right ms-1 small"></i>
                        </a>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="stat-card">
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <div class="text-muted">Total Pending</div>
                    <div class="fs-3 fw-bold">@ViewBag.TotalPendingTasks</div>
                            </div>
                            <div class="stat-icon icon-orange">
                                <i class="fas fa-clock"></i>
                            </div>
                        </div>
                        <a href="/Report/Index" class="show-more text-decoration-none">
                            Show more <i class="fas fa-chevron-right ms-1 small"></i>
                        </a>
                    </div>
                </div>
            </div>

            <!-- Tasks Section -->
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Count</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in ViewBag.Tasks)
                {
                    <tr>
                        <td>@task.Status</td>
                        <td>@task.Count</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

      